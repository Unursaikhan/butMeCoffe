model User {
  id               Int          @id @default(autoincrement())
  email            String       @unique
  password         String
  username         String       @unique
  profile          Profile?
  bankcards        Bankcard[]
  receivedDonations Donations[] @relation("ReceivedDonations")
  sentDonations     Donations[] @relation("SentDonations")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}   

model Profile {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  about         String
  avatarImage   String
  socialMedia   String
  backGroundImage String 
  userId        Int @unique
  user          User  @relation(fields: [userId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
model Bankcard {
  id            Int   @id @default(autoincrement())
  country       String
  firstName     String
  lastName      String
  cardNumber    String
  expiryDate    String
  CVC           String
  userId        Int @unique
  user          User @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
model Donations {
  id              Int       @id @default(autoincrement())
  amount          Int
  specialMessage  String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  recipientId     Int
  recipent        User      @relation("ReceivedDonations", fields: [recipientId], references: [id])

  senderId        Int
  sender          User      @relation("SentDonations", fields: [senderId], references: [id])
}

